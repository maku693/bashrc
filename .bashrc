# Prompt
PS1='\e[34m\w\e[m\n\$ '

# History
HISTCONTROL=erasedups
HISTSIZE=1000

# Aliases
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias ga='git add'
alias gc='git commit'
alias gcm='gc -m'
alias gca='gc --amend'
alias gd='git diff'
alias gl='git log'
alias gm='git merge'
alias gp='git push'
alias gr='git rebase'
alias gri='gr -i'
alias gs='git status'
